<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrispySpoon.Views.HomePage" 
             Title="{Binding Title}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollView VerticalOptions="Center">
            <StackLayout VerticalOptions="StartAndExpand">
                <Button Margin="10,10,10,0" Text="Login" Clicked="OnLoginButtonClicked" />
                <Button Margin="10,10,10,0" Text="About" Clicked="OnAboutButtonClicked" />
            </StackLayout>
        </ScrollView>
    </Grid>

</ContentPage>